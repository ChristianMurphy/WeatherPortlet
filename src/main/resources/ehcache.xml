<ehcache>
    <defaultCache
        maxElementsInMemory="100"
        eternal="true"
        overflowToDisk="false"
        memoryStoreEvictionPolicy="LFU"/>

	<!-- 15 minute cache on weather data -->
    <cache name="weatherDataCache"
        maxElementsInMemory="100"
        eternal="false"
        timeToLiveSeconds="900" 
        overflowToDisk="false"
        memoryStoreEvictionPolicy="LFU"/>
        
	<!-- 1 hour cache on weather searches -->
    <cache name="weatherSearchCache"
        maxElementsInMemory="250"
        eternal="false"
        timeToLiveSeconds="3600" 
        overflowToDisk="false"
        memoryStoreEvictionPolicy="LFU"/>
</ehcache>