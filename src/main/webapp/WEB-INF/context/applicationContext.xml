<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:ehcache="http://www.springmodules.org/schema/ehcache"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
			http://www.springmodules.org/schema/ehcache
			http://www.springmodules.org/schema/cache/springmodules-ehcache.xsd">

	<!-- Author: Dustin Schultz | Version: $Id$ -->
	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<!-- Annotations Configuration -->
	<context:annotation-config/>
	
	<!-- EHCache Configuration -->
	<ehcache:config configLocation="classpath:ehcache.xml"/>
	
	<!-- EHCache Annotations Configuration -->
	<ehcache:annotations>
		<ehcache:caching id="weatherDataCacheModel" cacheName="weatherDataCache"/>
		<ehcache:caching id="weatherSearchCacheModel" cacheName="weatherSearchCache"/>
	</ehcache:annotations>
	
	<!-- messages.propreties Configuration -->
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>messages</value>
			</list>
		</property>										
	</bean>
	
	<!-- This interceptor forwards the mapping request parameter from an ActionRequest to be used as a render parameter. -->
	<bean id="parameterMappingInterceptor" class="org.springframework.web.portlet.handler.ParameterMappingInterceptor"/>
	
	<!-- ========================= PORTLET SPECIFIC DEFINITIONS ========================= -->
	
	<bean id="modelPasser" class="org.jasig.web.util.DefaultModelPasser"/>

	<bean id="sessionKeyGenerator" class="org.jasig.web.util.DefaultSessionKeyGenerator">
		<property name="seed" value="0" />
	</bean>
	

	<!-- Default ExceptionHandler 
	<bean id="defaultExceptionHandlerTemplate" class="org.springframework.web.portlet.handler.SimpleMappingExceptionResolver">
    <property name="order" value="10"/>
		<property name="defaultErrorView" value="error"/>
		<property name="exceptionMappings">
			<props>
				<prop key="javax.portlet.PortletSecurityException">notAuthorized</prop>
				<prop key="javax.portlet.UnavailableException">unavailable</prop>
				<prop key="java.lang.RuntimeException">error</prop>
			</props>
		</property>  
	</bean>
	-->

	<bean id="requiredAnnotationBeanPostProcessor" class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor" />
	
	<!-- ========================= DAO Defenitions ============================ -->
	
	<!-- Choose an implementation (DOM4J or Xstream), uncomment one and comment out the other. 
		Also, don't forget to do the same in testContext.xml
	-->
	
	<!-- DOM4J Impl 
	<bean id="weatherDao" class="org.jasig.portlet.weather.dao.accuweather.dom4j.WeatherDaoImpl"
		p:connectionTimeout="1000"
		p:readTimeout="3000"
		p:timesToRetry="5"
	/>
	-->
	
	<!-- Xstream Impl -->
	<bean id="weatherDao" class="org.jasig.portlet.weather.dao.accuweather.xstream.WeatherDaoImpl"
		p:connectionTimeout="1000"
		p:readTimeout="3000"
		p:timesToRetry="5"
	/>
	
	<!-- ========================= SERVICE DEFENITIONS ========================= -->
	<bean id="weatherService" class="org.jasig.portlet.weather.service.WeatherServiceImpl"/>

</beans>