<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Author: Dustin Schultz | Version: $Id$ -->
	<!-- ========================= RESOURCE DEFINITIONS ========================= -->
	<context:annotation-config/>
	
	<!-- ========================= DAO Defenitions ============================ -->
	
	<!-- Choose an implementation (DOM4J or Xstream), uncomment one and comment out the other. 
		Also, don't forget to do the same in applicationContext.xml
	-->
	
	<!-- DOM4J Impl
	<bean id="weatherDao" class="org.jasig.portlet.weather.dao.accuweather.dom4j.WeatherDaoImpl"
		p:connectionTimeout="1000"
	/>
	-->
	 
	<!-- Xstream Impl -->
	<bean id="weatherDao" class="org.jasig.portlet.weather.dao.accuweather.xstream.WeatherDaoImpl"
		p:connectionTimeout="1000"
	/>
	
	<!-- ========================= SERVICE DEFENITIONS ========================= -->
	<bean id="weatherService" class="org.jasig.portlet.weather.service.WeatherServiceImpl"/>

</beans>